{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "radiant-youth-site-new"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.scss"
      ],
      "scripts": [
        "assets/scripts/jquery-1.11.3.min.js",
        "assets/scripts/jquery-migrate-1.2.1.min.js",
        "assets/scripts/jquery.flexslider-min.js",
        "assets/scripts/jquery.waypoints.min.js",
        "assets/scripts/jquery.validate.min.js",
        "assets/scripts/jquery.fittext.js",
        "assets/scripts/jquery.placeholder.min.js",
        "assets/scripts/jquery.magnific-popup.min.js",
        "assets/scripts/moment.js",
        "assets/scripts/fullcalendar.min.js",
        "assets/scripts/gcal.js",
        "assets/scripts/main.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {}
  }
}